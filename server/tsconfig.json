{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/server",
    "module": "commonjs",
    "skipLibCheck": true,
    "noPropertyAccessFromIndexSignature": false,
    "strictPropertyInitialization": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "paths": {
      "@server/*": ["*"]
    }
  },
  "include": ["**/*"]
}
